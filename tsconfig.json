{
	"$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "lib": ["es2020", "dom"],
        "module": "commonjs",
        "target": "es5",
		"baseUrl": "src/ts",
        "types": ["node", "react"],
		"jsx": "react",
		"outDir": "src/js",
        "sourceMap": true,
        "strict": true,
		"allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
		"noUnusedParameters": true,
		"allowUnreachableCode": false,
		"preserveConstEnums": false,
		"resolveJsonModule": true
    },
	"include": ["src/ts/**/*"]
}
